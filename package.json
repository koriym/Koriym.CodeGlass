{
  "name": "code-glass",
  "displayName": "Code Glass",
  "description": "AI Powered Code Comments",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeglass.addComments"
  ],
  "main": "./out/extension.js",
  "contributes": {
  "commands": [
    {
      "command": "codeglass.addComments",
      "title": "CodeGlass: Add Comments"
    },
    {
        "command": "codeglass.updateModels",
        "title": "CodeGlass: Load Ollama Model List"
    }
  ],
  "configuration": [
    {
      "title": "CodeGlass",
      "properties": {
        "codeglass.connectionType": {
          "type": "string",
          "enum": ["ollama", "deepseek"],
          "default": "ollama",
          "description": "Select the AI service to use for code commenting"
        },
        "codeglass.model": {
          "type": "string",
          "enum": [],
          "default": "",
          "description": "Select model to use for code commenting"
        },
        "codeglass.prompt": {
          "type": "string",
          "default": "",
          "description": "AI Prompt",
          "editPresentation": "multilineText"
        }
      }
    }
  ]
},
  "scripts": {
    "build": "node esbuild.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:esbuild": "node esbuild.js --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.23.0",
    "eslint": "^7.27.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "axios": "^0.21.1"
  },
  "publisher": "koriym",
  "repository": {
    "url": "https://github.com/koriym/vscode-code-glass"
  }
}
